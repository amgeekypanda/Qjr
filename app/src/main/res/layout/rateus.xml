<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="200dp"
    android:background="@color/white"
    android:orientation="vertical"
    android:padding="2dip">


    <TextView android:text="Rate Us"
        android:id="@+id/rank_dialog_text1"
        android:textSize="24dp"
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
       android:layout_centerHorizontal="true"
        android:textColor="@color/black"
        android:layout_marginBottom="10dp"
        android:layout_gravity="center"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_below="@id/rank_dialog_text1"
        android:background="@drawable/toolbar_shadow"
        >
    </View>

    <RatingBar
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:id="@+id/dialog_ratingbar"
        android:layout_gravity="center"
        android:numStars="5"
        android:stepSize="1.0"
        android:rating="2"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/rank_dialog_text1"
        android:isIndicator="false"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_below="@id/dialog_ratingbar"
        android:background="@drawable/toolbar_shadow"
        >
    </View>

    <Button android:id="@+id/rank_dialog_button"
        android:layout_height="wrap_content"
        android:text="Cancel"
     android:layout_marginTop="15dp"
        android:textColor="@color/black"
        android:textSize="20dip"
       android:background="@color/white"
android:layout_marginLeft="20dp"


        android:layout_below="@+id/dialog_ratingbar"
        android:layout_width="150dp" />

    <Button android:id="@+id/rank_dialog_button1"
        android:layout_height="wrap_content"
        android:text="Submit"
        android:textColor="@color/black"
        android:textSize="20dip"
        android:layout_marginRight="30dp"
        android:layout_below="@+id/dialog_ratingbar"
        android:layout_toRightOf="@id/rank_dialog_button"
        android:layout_marginTop="15dp"

        android:background="@color/white"
        android:layout_width="150dp" />

</RelativeLayout>